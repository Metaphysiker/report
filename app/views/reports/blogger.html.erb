<h1>Blogger von Philosophie.ch</h1>

<div class="form-group pull-right">
  <input type="text" class="search form-control" placeholder="Nach Mitglied suchen">
</div>
<span class="counter pull-right"></span>
<table class="table table-hover table-bordered results">
  <thead>
  <tr>
    <th>#</th>
    <th class="col-md-3 col-xs-3">Blogger</th>
    <th class="col-md-3 col-xs-3">Anzahl Beiträge</th>
    <th class="col-md-3 col-xs-3">Letzter Beitrag erstellt</th>
    <th class="col-md-3 col-xs-3">Erinnerung nötig?</th>
  </tr>
  <tr class="warning no-result">
    <td colspan="4"><i class="fa fa-warning"></i> No result</td>
  </tr>
  </thead>
  <tbody>

  <% ids = Blogger.all.pluck(:blogger_id) %>
  <% AlchemyUser.find(ids).each do |member| %>
      <% id = member.id %>
      <tr>
        <th scope="row"><%= id %></th>
        <td><%= member.firstname %> <%= member.lastname %></td>
        <td>
          <%= AlchemyPage.where(page_layout: "article").where(creator_id: id).count %>
        </td>
        <td>

          <%= AlchemyPage.where(page_layout: "article").where(creator_id: id).order("created_at").last.created_at unless AlchemyPage.where(page_layout: "article").where(creator_id: id).order("published_at").last.nil? %>
        </td>
        <td>
          leer
        </td>
      </tr>


  <% end %>

  </tbody>
</table>

<h1>Mitglieder von Philosophie.ch, aber keine Blogger</h1>

<span class="counter pull-right"></span>
<table class="table table-hover table-bordered results">
  <thead>
  <tr>
    <th>#</th>
    <th class="col-md-4 col-xs-4">Mitglied</th>
    <th class="col-md-4 col-xs-4">Benutzername</th>
    <th class="col-md-4 col-xs-4"></th>
  </tr>
  <tr class="warning no-result">
    <td colspan="4"><i class="fa fa-warning"></i> No result</td>
  </tr>
  </thead>
  <tbody>


  <% AlchemyUser.where.not(id: ids).where(alchemy_roles: "member").each do |member| %>
    <% id = member.id %>
      <tr>
        <th scope="row"><%= id %></th>
        <td><%= member.firstname %> <%= member.lastname %></td>
        <td>
          <%= member.login %>
        </td>
        <td>
          <button type="button" class="btn btn-primary">Als Blogger hinzufügen</button>
        </td>
      </tr>


  <% end %>

  </tbody>
</table>


<script>
    $(document).ready(function() {
        $(".search").keyup(function () {
            var searchTerm = $(".search").val();
            var listItem = $('.results tbody').children('tr');
            var searchSplit = searchTerm.replace(/ /g, "'):containsi('")

            $.extend($.expr[':'], {'containsi': function(elem, i, match, array){
                return (elem.textContent || elem.innerText || '').toLowerCase().indexOf((match[3] || "").toLowerCase()) >= 0;
            }
            });

            $(".results tbody tr").not(":containsi('" + searchSplit + "')").each(function(e){
                $(this).attr('visible','false');
            });

            $(".results tbody tr:containsi('" + searchSplit + "')").each(function(e){
                $(this).attr('visible','true');
            });

            var jobCount = $('.results tbody tr[visible="true"]').length;
            $('.counter').text(jobCount + ' item');

            if(jobCount == '0') {$('.no-result').show();}
            else {$('.no-result').hide();}
        });
    });
</script>